{
  "name": "limit-once",
  "description": "Remember the first result of a function call",
  "author": "Alex Reardon <alexreardon@gmail.com>",
  "keywords": [
    "memoize",
    "memoization",
    "once",
    "cache",
    "performance"
  ],
  "license": "MIT",
  "version": "0.2.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/alexreardon/limit-once.git"
  },
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "bun build:clean && bun build:dist && bun build:types",
    "build:clean": "rimraf dist",
    "build:dist": "bun build ./src/limit-once.ts --outdir ./dist --format esm",
    "build:types": "tsc ./src/limit-once.ts --outDir ./dist --declaration --emitDeclarationOnly --skipLibCheck",
    "check:prettier": "prettier --debug-check src/**/*.ts test/**/*.ts",
    "check:typescript": "tsc --noEmit ./src/** ./test/** --skipLibCheck --target es2022"
  },
  "module": "./dist/limit-once.js",
  "types": "./dist/limit-once.d.ts",
  "exports": {
    ".": "./dist/limit-once.js",
    "./types": "./dist/limit-once.d.ts"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "engines": {
    "bun": ">=1.1.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  }
}
